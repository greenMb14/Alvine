{% extends 'baseCustomer.html.twig' %}

{% block title %}Hello CustomerController!{% endblock %}

{% block body %}
  <main id="main" style="margin-top:5em">                               
    <div class="row">                                        
              {% for item in data %}
  

                        <div class="col-xl-4 col-lg-5">
                            <div class="card shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div
                                    class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h4 style="color:#37517e">Titre:{{item.title}}</h4>
                                     <h6 style="font-family:Segoe UI Light;color:grey;">Categorie:{{item.category}}</h6>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                    <div class="chart-pie pt-4 pb-2" style="margin:auto;">
                                        <div style="width:100%;display:flex;justify-content: space-around;flex-wrap:wrap;">
                                           <image src="/fichier/{{item.file}}" style="width:70%;height:270px;" id="listeAnnonce">
                                        </div>
                                    </div>
                                    <div class="mt-4 text-center small">
                                        <span class="mr-2">
                                           <a href="{{path('EnSavoirPlus',{'id':item.id})}}" class="btn-learn-more">En Savoir plus....</a>
                                        </span> 
                                    </div>
                                </div>
                            </div>
                        </div>

     
 

 
{% endfor %}  
     
 </div>
 </main>

{% endblock %}